{
  "Prefix": "http://localhost:15000/",
  "Root": "./wwwroot",
  "IndexHtml": "./wwwroot/index.html",
  "CssFile": "./wwwroot/styles.css",
  "PingTarget": "1.1.1.1",
  "RouterIP": "192.168.50.1",
  "Database": {
    "Host": "127.0.0.1",
    "Port": 5432,
    "Database": "system_dashboard",
    "Username": "postgres",
    "PasswordSecret": "mysecretpassword",
    "Schema": "telemetry",
    "PsqlPath": "C:/Program Files/PostgreSQL/18/bin/psql.exe"
  },
  "Service": {
    "LogPath": "./var/log/telemetry-service.log",
    "Syslog": {
      "BindAddress": "0.0.0.0",
      "Port": 5514,
      "BufferDirectory": "./var/syslog",
      "MaxMessageBytes": 8192
    },
    "Asus": {
      "Enabled": true,
      "Uri": "http://192.168.50.1/syslog.txt",
      "HostName": "asus-router",
      "Username": "xfaith",
      "PasswordSecret": "env:ASUS_ROUTER_PASSWORD",
      "PollIntervalSeconds": 60,
      "DownloadPath": "./var/asus",
      "StatePath": "./var/asus/state.json",
      "SSH": {
        "Enabled": true,
        "Host": "192.168.50.1",
        "Username": "xfaith",
        "PasswordSecret": "env:ASUS_ROUTER_PASSWORD",
        "Port": 1099,
        "TimeoutSeconds": 30
      }
    },
    "Ingestion": {
      "BatchIntervalSeconds": 30,
      "MinBatchSize": 25,
      "StagingDirectory": "./var/staging"
    }
  }
}
