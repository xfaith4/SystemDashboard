{
  "Prefix": "http://localhost:15000/",
  "Root": "./wwwroot",
  "IndexHtml": "./wwwroot/index.html",
  "CssFile": "./wwwroot/styles.css",
  "PingTarget": "8.8.8.8",
  "RouterIP": "192.168.1.1",
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "system_dashboard",
    "Username": "sysdash_ingest",
    "PasswordSecret": "env:SYSTEMDASHBOARD_DB_PASSWORD",
    "Schema": "telemetry",
    "PsqlPath": "psql"
  },
  "Logging": {
    "LogLevel": "INFO"
  },
  "Service": {
    "LogPath": "./var/log/telemetry-service.log",
    "Syslog": {
      "BindAddress": "0.0.0.0",
      "Port": 5515,
      "BufferDirectory": "./var/syslog",
      "MaxMessageBytes": 8192,
      "KpiSummaryPath": "./var/syslog/router-kpis.json"
    },
    "Events": {
      "Enabled": true,
      "LogNames": [
        "System",
        "Application",
        "Security"
      ],
      "Levels": [
        1,
        2,
        3,
        4
      ],
      "PollIntervalSeconds": 120,
      "MaxEvents": 200,
      "StatePath": "./var/events/state.json"
    },
    "Asus": {
      "Enabled": true,
      "Uri": "http://192.168.1.1/syslog.txt",
      "HostName": "router.local",
      "Username": "admin",
      "PasswordSecret": "env:ASUS_ROUTER_PASSWORD",
      "PollIntervalSeconds": 60,
      "DownloadPath": "./var/asus",
      "StatePath": "./var/asus/state.json",
      "SSH": {
        "Enabled": false,
        "Host": "router.local",
        "Username": "admin",
        "PasswordSecret": "env:ASUS_ROUTER_PASSWORD",
        "Port": 22,
        "TimeoutSeconds": 30
      }
    },
    "Ingestion": {
      "BatchIntervalSeconds": 30,
      "MinBatchSize": 25,
      "StagingDirectory": "./var/staging"
    }
  },
  "Actions": {
    "AllowAutoExecute": true,
    "RequireApproval": false,
    "SafeActions": [
      "dns_flush",
      "noop"
    ]
  }
}
